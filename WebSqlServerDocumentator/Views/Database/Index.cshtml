@model IEnumerable<SqlServerDocumentator.DocumentedDatabaseObjects.DocumentedDatabase>

@{
    ViewData["Title"] = "View";
}

<h2>View</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Explore Tables", "Tables", "Database", new { databaseName = item.Name, serverName = item.ServerName }) |
                    @Html.ActionLink("Explore Views", "Views", "Database", new { databaseName = item.Name, serverName = item.ServerName }) |
                    @Html.ActionLink("Explore Stored Procedures", "StoredProcedures", "Database", new { databaseName = item.Name, serverName = item.ServerName })
                </td>
            </tr>
        }
    </tbody>
</table>
